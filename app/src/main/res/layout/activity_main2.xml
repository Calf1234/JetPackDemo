<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livedata.MainActivity">

    <TextView
        android:id="@+id/livedata_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="livedata"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/livedata_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/livedata_tv1" />

    <Button
        android:id="@+id/livedata_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkLiveDataBus test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/livedata_btn1" />

</androidx.constraintlayout.widget.ConstraintLayout>